        <TextBlock HorizontalAlignment="Left" Height="59" Margin="344,330,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" RenderTransformOrigin="0.544,1.615" FontStyle="Italic" FontWeight="Bold" TextDecorations="Underline"><Run Text="Vermietungszeitraum"/><InlineUIContainer>
                <TextBox Background="Beige"  Foreground="Black"  IsReadOnly="True" x:Name="Vermietungszeitraum" Height="27" TextWrapping="Wrap" Text="" Width="139" RenderTransformOrigin="0.467,1.552" FontWeight="Normal" FontStyle="Italic"/>
            </InlineUIContainer></TextBlock>
        <Label Content="Zeitraumsauswahl" Height="41" Margin="0,23,0,0" VerticalAlignment="Top" Width="226" Foreground="White" FontSize="22" FontWeight="Bold" FontStyle="Italic" HorizontalAlignment="Center"/>
    </Grid>
</Window>

