        mc:Ignorable="d"
        Title="MainWindow"
        Height="450" Width="800"
        Background="DarkOrange">
    <Grid Margin="0,0,-6.667,-19.333">
        <DatePicker Background="Orange"  BorderBrush="Black" BorderThickness="3" HorizontalAlignment="Left" Margin="194,129,0,0" VerticalAlignment="Top" Height="182" Width="187" x:Name="Abholdatum" SelectedDateChanged="SelectedDateChanged"/>
        <DatePicker BorderBrush="Black" BorderThickness="3" Background="Orange"  HorizontalAlignment="Left" Margin="429,129,0,0" VerticalAlignment="Top" Height="182" Width="187" x:Name="Rückgabedatum" SelectedDateChanged="SelectedDateChanged"/>
        <TextBlock HorizontalAlignment="Left" Height="36" Margin="195,88,0,0" TextWrapping="Wrap" Text="Abholdatum" VerticalAlignment="Top" Width="186" FontSize="20" FontWeight="Bold" FontStyle="Italic" TextDecorations="Underline"/>
        <TextBlock HorizontalAlignment="Left" Height="41" Margin="429,88,0,0" TextWrapping="Wrap" Text="Rückgabedatum" VerticalAlignment="Top" Width="187" FontWeight="Bold" FontStyle="Italic" TextDecorations="Underline" FontSize="20"/>
